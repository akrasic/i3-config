#Color scheme
set $green #98971a
set $red   #fb4934
set $lgray #a89984
set $dgray #928374
set $white #ebdbb2
set $black #282828
set $blue  #458588
set $cyan  #689d6a
set $purple #b16286

set $mod Mod4

font pango:FontAwesome 10, pango: Fira Sans ExtraLight 8

#Gaps
gaps inner 2
gaps outer 2
hide_edge_borders vertical

floating_modifier $mod
workspace_auto_back_and_forth yes
force_display_urgency_hint 0 ms
focus_on_window_activation urgent


# start programs
bindsym $mod+Shift+f  exec --no-startup-id firefox
bindsym $mod+g exec --no-startup-id chromium

# launch programs
mode "launch" {
	bindsym Print exec scrot, mode "default"

	# Bind some on the ASD row
	bindsym a exec geany, mode "default"	
	bindsym s exec steam, mode "default"
	bindsym d exec deluge, mode "defalt"
	bindsym f exec firefox, mode "default"
	bindsym g exec thunar, mode "default"
	bindsym h exec skype, mode "default"

	bindsym c exec chromium, mode "default"
	bindsym t exec thunderbird, mode "default"
	bindsym v exec vlc, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+m  mode "launch"

#new_window normal
bindsym Control+Shift+x [class="^.*"]

