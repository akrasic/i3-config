bindsym $mod+Shift+f  exec --no-startup-id firefox
bindsym $mod+g exec --no-startup-id chromium

# launch programs
mode "launch" {
	bindsym Print exec scrot, mode "default"

	# Bind some on the ASD row
	bindsym a exec geany, mode "default"	
	bindsym s exec steam, mode "default"
	bindsym d exec deluge, mode "defalt"
	bindsym f exec firefox, mode "default"
	bindsym g exec thunar, mode "default"
	bindsym h exec skype, mode "default"

	bindsym c exec chromium, mode "default"
	bindsym t exec thunderbird, mode "default"
	bindsym v exec vlc, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+m  mode "launch"

